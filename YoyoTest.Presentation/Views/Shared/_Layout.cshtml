<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YoyoTest</title>
    <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;1,200&display=swap" rel="stylesheet">
    <style>
        html, body, button {
            font-family: 'Poppins', sans-serif !important;
            font-size: 1rem;
        }
    </style>

</head>
<body>
    <main class="container is-fluid">
        @RenderBody()
    </main>
    <script src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
